
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    
    // Fetch the current user's document data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Check if the current user exists in the 'users' collection
    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Check if the current user is an Admin
    function isAdmin() {
      return request.auth != null && 
             userExists() && 
             getUserData().isAdmin == true;
    }
    
    // Check if the current user is assigned to the specific Bial
    function isAssignedToBial(bialName) {
      return request.auth != null && 
             userExists() && 
             getUserData().assignedBial == bialName;
    }

    // Check if a specific year is explicitly marked as archived in settings
    function isYearArchived(year) {
      // Use string() casting instead of .toString()
      let yearStr = string(year); 
      let archivePath = /databases/$(database)/documents/settings/$(yearStr)/archive/current;
      return exists(archivePath) && get(archivePath).data.isArchived == true;
    }

    // --- COLLECTION RULES ---

    // Settings Collection
    match /settings/{yearId} {
      allow read: if true;

      // Bial Info (Overseers)
      match /bialInfo/{bialName} {
        allow read: if true;
        allow write: if isAdmin() && !isYearArchived(yearId);
      }
      
      // Archive Status
      match /archive/{statusId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Users Collection
    match /users/{userId} {
      // Read: Users can read their own profile; Admins can read all.
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Create: Users can create their own profile upon registration.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Update: Users can update their own profile; Admins can update any profile (roles).
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Delete/List: Only Admins.
      allow delete, list: if isAdmin();
    }
    
    // Families Collection
    match /families/{familyId} {
      allow read: if request.auth != null;
      
      // Create: Admin or User assigned to the new family's Bial
      allow create: if isAdmin() || isAssignedToBial(request.resource.data.currentBial);

      // Update: Admin OR User assigned to the OLD Bial OR User assigned to the NEW Bial
      // This allows transferring families and claiming unassigned families (where resource.data.currentBial is null).
      allow update: if isAdmin() || 
                    (resource.data.currentBial != null && isAssignedToBial(resource.data.currentBial)) ||
                    (request.resource.data.currentBial != null && isAssignedToBial(request.resource.data.currentBial));

      // Delete: Admin or User assigned to the family's current Bial
      allow delete: if isAdmin() || (resource.data.currentBial != null && isAssignedToBial(resource.data.currentBial));
    }

    // Tithe Logs Collection
    match /titheLogs/{logId} {
      allow read: if request.auth != null;
      
      // Create: Year must not be archived AND (Admin OR User assigned to target Bial)
      allow create: if !isYearArchived(request.resource.data.year) && 
                      (isAdmin() || isAssignedToBial(request.resource.data.upaBial));

      // Update: Year must not be archived AND (Admin OR User assigned to target Bial)
      allow update: if !isYearArchived(request.resource.data.year) && 
                      (isAdmin() || isAssignedToBial(request.resource.data.upaBial));

      // Delete: Year must not be archived AND (Admin OR User assigned to existing Bial)
      allow delete: if !isYearArchived(resource.data.year) && 
                      (isAdmin() || isAssignedToBial(resource.data.upaBial));
    }
  }
}
